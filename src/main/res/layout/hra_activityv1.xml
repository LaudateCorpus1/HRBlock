<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarcolor"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/headerlogo"
                android:layout_width="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_height="30dp"
                android:src="@drawable/hra"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House Rent Allowance"
                android:textSize="20sp"
                android:textColor="@color/textcolorfaint"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/headerlogo"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolorfaint"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Calculate HRA Exemption"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="@color/textcolorfaint"
                        android:layout_height="wrap_content"
                        android:text="Enter monthly basic salary"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/r1"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text="₹"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            />

                        <EditText
                            android:id="@+id/et_basicsalary"
                            android:layout_toRightOf="@id/r1"
                            android:maxLength="6"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/textcolorfaint"
                            android:background="@drawable/edit_bg"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_below="@id/et_basicsalary"
                            android:layout_height="0.1dp"
                            android:background="#B6B6B6"></View>


                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="@color/textcolorfaint"
                        android:layout_height="wrap_content"
                        android:text="Enter monthly House Rent Allowance (HRA)"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/r2"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text="₹"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            />

                        <EditText
                            android:id="@+id/et_hra"
                            android:layout_toRightOf="@id/r2"
                            android:maxLength="6"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/textcolorfaint"
                            android:background="@drawable/edit_bg"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_below="@id/et_hra"
                            android:layout_height="0.1dp"
                            android:background="#B6B6B6"></View>


                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="@color/textcolorfaint"
                        android:layout_height="wrap_content"
                        android:text="Enter monthly rent paid"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/r4"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text="₹"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            />

                        <EditText
                            android:id="@+id/et_rentpaid"
                            android:layout_toRightOf="@id/r4"
                            android:maxLength="6"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/textcolorfaint"
                            android:background="@drawable/edit_bg"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_below="@id/et_rentpaid"
                            android:layout_height="0.1dp"
                            android:background="#B6B6B6"></View>


                    </RelativeLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="@color/textcolorfaint"
                        android:layout_height="wrap_content"
                        android:text="Accommodation situated at"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_height="wrap_content">

                        <!--
                                        <TextView
                                            android:id="@+id/r3"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:text="₹"
                                            android:layout_centerInParent="true"
                                            android:layout_alignParentLeft="true"
                                            />
                        -->

                        <!--
                                        <EditText
                                            android:id="@+id/et_accomodation"
                                            android:layout_toRightOf="@id/r3"
                                            android:maxLength="6"
                                            android:inputType="number"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:text=""
                                            android:textSize="15sp"

                                            android:background="@drawable/edit_bg"/>
                        -->

                        <Spinner
                            android:id="@+id/spinner_accomodation"
                            android:layout_width="wrap_content"
                            android:entries="@array/spinner_item"
                            android:background="@drawable/apptheme_spinner_default_holo_light"
                            android:layout_height="wrap_content"></Spinner>

                        <!--
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_below="@id/spinner_accomodation"
                                            android:layout_height="0.1dp"
                                            android:background="#B6B6B6"></View>
                        -->


                    </RelativeLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/calculate_hra"
                    android:layout_below="@id/centerlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Calculate"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/greencolor"/>


<!--
                <LinearLayout
                    android:id="@+id/optimumlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    >

                    <TextView
                        android:id="@+id/optimumtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolorfaint"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:textSize="15sp"
                        android:text="Optimumtv"/>


                </LinearLayout>
-->



                <LinearLayout
                    android:id="@+id/centerlayout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/dividercolornew"></View>


                    <!--
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/textcolorfaint"
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginTop="10dp"
                                                android:textSize="17sp"
                                                android:fontFamily="sans-serif-medium"
                                                android:layout_marginBottom="10dp"
                                                android:layout_marginRight="15dp"
                                                android:text="How much you actually paid?"/>
                                        </LinearLayout>
                    -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="10dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:layout_marginRight="15dp">


                        <TextView
                            android:id="@+id/exceptiontvclick"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:fontFamily="sans-serif"
                            android:ellipsize="end"
                            android:textSize="16sp"
                            android:textColor="@color/textcolorfaint"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:text="Amount of exemption, being the least of the three given below"/>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/r5"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text="₹"
                                android:layout_centerInParent="true"
                                android:layout_alignParentLeft="true"
                                />

                            <TextView
                                android:id="@+id/tv_amountexception"
                                android:layout_toRightOf="@id/r5"
                                android:maxLength="6"
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/textcolorfaint"
                                android:background="@drawable/edit_bg"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_below="@id/tv_amountexception"
                                android:layout_height="0.1dp"
                                android:background="#B6B6B6"></View>


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rectangle_border">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textcolorfaint"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="17sp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="HRA exemption will be the least given below:"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:fontFamily="sans-serif"
                                android:textSize="16sp"
                                android:textColor="@color/textcolorfaint"
                                android:layout_height="wrap_content"
                                android:text="40% (or 50% in case of metro) of basic salary"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"

                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/r6"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:text="₹"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentLeft="true"
                                    />

                                <TextView
                                    android:id="@+id/tv_metro"
                                    android:layout_toRightOf="@id/r6"
                                    android:maxLength="6"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:textColor="@color/textcolorfaint"
                                    android:background="@drawable/edit_bg"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_below="@id/tv_metro"
                                    android:layout_height="0.1dp"
                                    android:background="#B6B6B6"></View>


                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:fontFamily="sans-serif"
                                android:textSize="16sp"
                                android:textColor="@color/textcolorfaint"
                                android:layout_height="wrap_content"
                                android:text="HRA actually received"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"

                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/r7"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:text="₹"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentLeft="true"
                                    />

                                <TextView
                                    android:id="@+id/tv_hrareceived"
                                    android:layout_toRightOf="@id/r7"
                                    android:maxLength="6"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:textColor="@color/textcolorfaint"
                                    android:background="@drawable/edit_bg"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_below="@id/tv_hrareceived"
                                    android:layout_height="0.1dp"
                                    android:background="#B6B6B6"></View>


                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:fontFamily="sans-serif"
                                android:textSize="16sp"
                                android:textColor="@color/textcolorfaint"
                                android:layout_height="wrap_content"
                                android:text="Excess of rent paid over 10% of basic salary"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/r8"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:text="₹"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentLeft="true"
                                    />

                                <TextView
                                    android:id="@+id/tv_excess"
                                    android:layout_toRightOf="@id/r8"
                                    android:maxLength="6"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:textColor="@color/textcolorfaint"
                                    android:background="@drawable/edit_bg"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_below="@id/tv_excess"
                                    android:layout_height="0.1dp"
                                    android:background="#B6B6B6"></View>

                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/maximumlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:id="@+id/maximumtax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolorfaint"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:textSize="15sp"
                            android:text=""/>

                    </LinearLayout>


                    <Button
                        android:id="@+id/done_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Done"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:background="@color/greencolor"/>

               </LinearLayout>

                <LinearLayout
                    android:id="@+id/belowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true">


                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>