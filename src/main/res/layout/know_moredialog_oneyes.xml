<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:background="@color/toolbarcolor">

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@color/toolbarcolor">

            <ImageView
                android:id="@+id/crossclick"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/crosspopup"
                android:layout_marginTop="5dp"

                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Travel Allowance"
                android:textSize="18sp"
                android:layout_marginTop="15dp"

                android:textColor="@color/textcolorfaint"
                android:fontFamily="sans-serif-medium"
                />

        </RelativeLayout>


        <LinearLayout
        android:layout_below="@id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"

            android:textColor="@color/textcolorfaint"
            android:text="Conditions necessary to claim LTA exemption:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/textcolorfaint"
            android:text="1) "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/textcolorfaint"
                android:text="You should be on leave."/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"

            android:textColor="@color/textcolorfaint"
            android:text="2) "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"

                android:textColor="@color/textcolorfaint"
                android:text="Travel should be within India."/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/textcolorfaint"
            android:text="3) "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/textcolorfaint"
                android:text="You may also take your family members along with you."/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="15dp"
            android:textColor="@color/textcolorfaint"
            android:text="Family members can be:"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"

            android:textColor="@color/textcolorfaint"
            android:text="1) "/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:fontFamily="sans-serif"
               android:textColor="@color/textcolorfaint"
               android:text="Spouse and children*."/>

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"

            android:textColor="@color/textcolorfaint"
            android:text="2) "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"

                android:textColor="@color/textcolorfaint"
                android:text="Parents, brothers and sisters who are dependent on you."/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="15dp"
            android:textColor="@color/textcolorfaint"
            android:text="*Exemption is restricted upto 2 children."/>

    </LinearLayout>
   <!-- <TextView
        android:id="@+id/Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_gravity="right"
        android:textSize="18sp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/greencolor"
        android:fontFamily="sans-serif-medium"
        />-->


   </RelativeLayout>


</RelativeLayout>